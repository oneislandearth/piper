[Unit]
Description=ngrok
ConditionFileIsExecutable=/home/$USERNAME/ngrok
After=network.target

[Service]
StartLimitInterval=5
StartLimitBurst=10
ExecStart=/home/$USERNAME/ngrok "service" "run" "--config" "/home/$USERNAME/ngrok.yml"
Restart=always
RestartSec=15
EnvironmentFile=-/etc/sysconfig/ngrok

[Install]
WantedBy=default.target
